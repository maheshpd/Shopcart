<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ADE5">

    <RelativeLayout
        android:id="@+id/menwear"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Men's wear"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="@null"
            android:src="@drawable/add"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/background_light"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/womenwear"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Women's wear"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/add_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="@null"
            android:src="@drawable/add"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/background_light"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trackorder"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/trackordertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Track order"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/background_light"
            android:layout_below="@+id/trackordertext"
            android:layout_marginTop="11dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accountdetail"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/accountdetailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Account Details"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/background_light"
            android:layout_below="@+id/accountdetailtext"
            android:layout_marginTop="11dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/settingstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Settings"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/background_light"
            android:layout_below="@+id/settingstext"
            android:layout_marginTop="11dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/logouttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Log out"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/background_light"
            android:layout_below="@+id/logouttext"
            android:layout_marginTop="11dp"/>
    </RelativeLayout>
</LinearLayout>
