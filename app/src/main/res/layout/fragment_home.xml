<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".fragment.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/slider"/>

        <LinearLayout
            android:id="@+id/SliderDots"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#123"
            android:layout_alignBottom="@+id/slider"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/women"
            android:layout_width="200dp"
            android:layout_below="@+id/SliderDots"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_women"
                android:layout_width="200dp"
                android:src="@drawable/women"
                android:layout_marginStart="4dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="5dp"

                android:layout_height="match_parent" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image_women"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:text="Women"
                android:textColor="@android:color/background_light"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/home_btn_design" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/kid"
            android:layout_width="wrap_content"
            android:layout_below="@+id/SliderDots"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/women"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_kid"
                android:layout_width="200dp"
                android:src="@drawable/kid"
                android:layout_marginEnd="5dp"
                android:scaleType="centerCrop"
                android:layout_height="140dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image_kid"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:text="Kid"
                android:textColor="@android:color/background_light"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/home_btn_design" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/men"
            android:layout_width="wrap_content"
            android:layout_below="@+id/kid"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/women"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_men"
                android:layout_width="200dp"
                android:src="@drawable/kid"
                android:scaleType="centerCrop"
                android:layout_marginEnd="5dp"
                android:layout_height="140dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image_men"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:text="Men"
                android:textColor="@android:color/background_light"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/home_btn_design" />
        </RelativeLayout>




    </RelativeLayout>

</ScrollView>
